<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sakasho1.camera3.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="383dp"
        android:layout_height="411dp"
        android:layout_centerInParent="true"
        android:layout_gravity="top"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="right|bottom"
        android:layout_marginEnd="300dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="548dp"
        android:layout_weight="1"
        android:onClick="onModoru"
        android:text="戻る"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="384dp"
        android:layout_height="210dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="332dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/soutyou"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:onClick="onRadioButtonClicked"
            android:text="青"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/hiru"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:onClick="onRadioButtonClicked"
            android:text="黄"
            app:layout_constraintEnd_toStartOf="@+id/yugata"
            app:layout_constraintStart_toEndOf="@+id/soutyou"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/yugata"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:onClick="onRadioButtonClicked"
            android:text="赤"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/riseto"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:onClick="onRadioButtonClicked"
            android:text="戻す" />

    </RadioGroup>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="550dp"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="550dp"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>